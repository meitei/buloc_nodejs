form.well.form-horizontal
  fieldset
    .control-group
      label.control-label(for='name') name
      .controls
        input#name(type='text', name='name')
        span.help-inline
    .control-group
      label.control-label(for='caption') caption
      .controls
        textarea#caption(name='caption', rows='2')
        span.help-inline
    .control-group
      label.control-label(for='name') view_type
      .controls
        input#view_type(type='text', name='view_type')
        span.help-inline
    .form-actions
      a#dialog_regist.btn.btn-primary= __('Regist')
      a#dialog_close.btn= __('Close')
