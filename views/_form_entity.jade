form.well.form-horizontal
  fieldset
    .control-group
      label.control-label(for='name') name
      .controls
        input#name(type='text', name='name')
        span.help-inline
    .control-group
      label.control-label(for='caption') caption
      .controls
        textarea#caption(name='caption', rows='2')
        span.help-inline
    .control-group
      //
         <label class="control-label" for="cached">cached</label> 
      .controls
        label.checkbox
          input#cached(type='checkbox', name='cached', value='1')
          | cached
        span.help-inline
    .control-group
      //
         <label class="control-label" for="reflected">reflected</label> 
      .controls
        label.checkbox
          input#reflected(type='checkbox', name='reflected', value='1')
          | reflected
        span.help-inline
    .form-actions
      a#dialog_regist.btn.btn-primary= __('Regist')
      a#dialog_close.btn= __('Close')
